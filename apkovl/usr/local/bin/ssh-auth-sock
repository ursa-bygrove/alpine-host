#!/bin/sh
latest_auth_sock() {
  find /tmp/ssh-* \
    -user ${USER} \
    -maxdepth 1 \
    -type s \
    -name 'agent.*' \
    -exec ls -1t {} + \
    | head -1
}

symlink="${HOME}/.ssh/auth_sock"

if [ ! -S "${symlink}" ]; then
  if [ ! -S "${SSH_AUTH_SOCK}" ]; then
    SSH_AUTH_SOCK="$(latest_auth_sock)"
  fi
  if [ -S "${SSH_AUTH_SOCK}" ]; then
    ln -sf "${SSH_AUTH_SOCK}" "${symlink}"
  else
    rm -f "${symlink}"
  fi
fi

echo "${symlink} -> $(readlink "${symlink}")"
